/*标题  */
.text{
  display: inline-block;
  color: #646464;
  position: relative;
  /* height: 37rpx; */
}
.text:before{
  position: absolute;
  content: '';
  display: block;
  left: -60rpx;
  width: 40rpx;
  height: 4rpx;
  top: 50%;
  margin-top: -2rpx;
  background: #424242;
}
.text:after{
  position: absolute;
  content: '';
  display: block;
  right: -60rpx;
  width: 40rpx;
  height: 4rpx;
  top: 50%;
  margin-top: -2rpx;
  background: #424242;
}

